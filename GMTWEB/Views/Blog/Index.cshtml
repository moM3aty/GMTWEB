@model IEnumerable<GMTWEB.Models.BlogPost>

@{
    ViewData["Title"] = "Our Blog";
}

<div class="container py-5 mt-5">
    <h1 class="text-center mb-5 section-title" data-en="Our Blog" data-ar="مدونتنا">@ViewData["Title"]</h1>

    <div class="row g-4">
        @foreach (var post in Model)
        {
            <div class="col-md-6 col-lg-6">
                <a asp-action="Details" asp-route-id="@post.Id" class="card h-100 blog-card text-decoration-none">
                    <img src="@(post.ImageUrl ?? "https://placehold.co/600x400/EFEFEF/AAAAAA?text=No+Image")"
                         class="card-img-top blog-card-img"
                         alt="@post.Title"
                         onerror="this.onerror=null;this.src='https://placehold.co/600x400/EFEFEF/AAAAAA?text=Image+Error';">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title" data-en="@post.Title" data-ar="@post.TitleAr">@post.Title</h5>
                        <p class="card-text text-muted mt-auto">
                            <small>By @post.Author on @post.DatePosted.ToShortDateString()</small>
                        </p>
                    </div>
                </a>
            </div>
        }
    </div>
</div>
