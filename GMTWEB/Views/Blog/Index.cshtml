@model IEnumerable<GMTWEB.Models.BlogPost>

@{
    ViewData["Title"] = "Our Blog";
}

<div class="container py-5 mt-5">
    <h1 class="text-center mb-5 section-title" data-en="Our Blog" data-ar="مدونتنا">@ViewData["Title"]</h1>

    <div class="row g-4">
        @foreach (var post in Model)
        {
            <div class="col-md-6 col-lg-4">
                <div class="card h-100">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title" data-en="@post.Title" data-ar="@post.TitleAr">@post.Title</h5>
                        <p class="card-text text-muted"><small>By @post.Author on @post.DatePosted.ToShortDateString()</small></p>
                        <a asp-action="Details" asp-route-id="@post.Id" class="btn btn-primary mt-auto align-self-start" data-en="Read More" data-ar="اقرأ المزيد">Read More</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
