@model IEnumerable<GMTWEB.Models.Website>
@{
    ViewData["Title"] = "Home Page";
}

<header class="bg-dark text-white" id="home">
    <section class="py-5 text-center container">
        <div class="row py-lg-5">
            <div class="" data-aos="zoom-in" data-aos-delay="100">
                <h1 class="fw-bold text-white mb-3"
                    data-en="Moving Towards a Smarter, Digital Future"
                    data-ar="نحو مستقبل رقمي أكثر ذكاءً">
                    Moving Towards a Smarter, Digital Future
                </h1>

                <p class="lead text-center mx-auto mb-4"
                   data-en="We design and develop educational websites and platforms combining modern aesthetics, performance, and usability to empower institutions and educators."
                   data-ar="نصمم ونطور مواقع ومنصات تعليمية تجمع بين الحداثة والأداء وسهولة الاستخدام لتمكين المؤسسات والمعلمين.">
                    We design and develop educational websites and platforms combining modern aesthetics, performance, and usability to empower institutions and educators.
                </p>

                <div class="hero-buttons">
                    <a href="#contact" class="btn btn-primary btn-lg me-3 pulse-btn">
                        <i class="fas fa-rocket me-2"></i>
                        <span data-en="Get Started" data-ar="ابدأ الآن">Get Started</span>
                    </a>

                    <a href="#works" class="btn btn-outline-light btn-lg">
                        <i class="fas fa-eye me-2"></i>
                        <span data-en="View Our Works" data-ar="شاهد أعمالنا">View Our Works</span>
                    </a>

                </div>
            </div>
        </div>
    </section>
    <div class="scroll-indicator"><div class="scroll-arrow"></div></div>
</header>

<main>
    <section id="about" class="py-5 bg-white">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6" data-aos="fade-up">
                    <img src="~/imgs/AboutSection.webp" class="img-fluid rounded" alt="About Us">
                </div>
                <div class="col-md-6" data-aos="fade-up">
                    <h2 class="fw-bold section-title mt-3 mt-md-0 mb-4">
                        <span data-en="About GMTWeb" data-ar="عن GMTWeb">About GMTWeb</span>
                    </h2>

                    <p>
                        <span data-en="Founded in 2023, GMTWeb specializes in custom websites and digital platforms. Our experienced team is committed to delivering performance-driven and user-centered designs."
                              data-ar="تأسست GMTWeb في عام 2023، وهي متخصصة في تصميم المواقع والمنصات الرقمية حسب الطلب. يلتزم فريقنا ذو الخبرة بتقديم تصاميم عالية الأداء تركز على تجربة المستخدم.">
                            Founded in 2023, GMTWeb specializes in custom websites and digital platforms. Our experienced team is committed to delivering performance-driven and user-centered designs.
                        </span>
                    </p>

                    <p class="l">
                        <span data-en="Our team of designers, developers, and education specialists work together to create platforms that address the unique challenges faced by educational institutions and learners of all ages."
                              data-ar="يعمل فريقنا من المصممين والمطورين والمتخصصين في التعليم معًا لإنشاء منصات تُعالج التحديات الفريدة التي تواجه المؤسسات التعليمية والمتعلمين من جميع الأعمار.">
                            Our team of designers, developers, and education specialists work together to create platforms that address the unique challenges faced by educational institutions and learners of all ages.
                        </span>
                    </p>

                    <div class="row text-center mt-4">
                        <div class="col-4">
                            <div class="h-100 d-flex flex-column justify-content-center align-items-center stat-card">
                                <h3 class="mb-1 text-primary stat-number">2+</h3>
                                <small class="stat-label" data-en="Years Experience" data-ar="سنوات الخبرة">Years Experience</small>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="h-100 d-flex flex-column justify-content-center align-items-center stat-card">
                                <h3 class="mb-1 text-primary stat-number">50+</h3>
                                <small class="stat-label" data-en="Projects" data-ar="المشاريع">Projects</small>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="h-100 d-flex flex-column justify-content-center align-items-center stat-card">
                                <h3 class="mb-1 text-primary stat-number">50+</h3>
                                <small class="stat-label" data-en="Clients" data-ar="العملاء">Clients</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section id="services" class="services py-5 my-5 text-center bg-light">
        <div class="container">
            <h2 class="fw-bold mb-4 section-title">
                <span data-en="Our Services" data-ar="خدماتنا">Our Services</span>
            </h2>

            <div class="row g-4">
                <div class="col-lg-4 col-md-6" data-aos="fade-up" data-aos-delay="100">
                    <div class="service-card">
                        <div class="service-icon">
                            <i class="fas fa-tools"></i>
                        </div>
                        <h3 class="service-title">
                            <span data-en="Technical Updates" data-ar="التحديثات التقنية">Technical Updates</span>
                        </h3>
                        <p class="service-description">
                            <span data-en="Continuous support and updates for optimal performance and security."
                                  data-ar="دعم وتحديثات مستمرة لتحقيق أفضل أداء وضمان الأمان.">
                                Continuous support and updates for optimal performance and security.
                            </span>
                        </p>
                        <div class="service-overlay">
                            <div class="service-overlay-content">
                                <h4>
                                    <span data-en="Technical Updates" data-ar="التحديثات التقنية">Technical Updates</span>
                                </h4>
                                <p>
                                    <span data-en="We provide ongoing technical support, security updates, and performance optimizations to ensure your website runs smoothly."
                                          data-ar="نقدم دعمًا فنيًا مستمرًا، وتحديثات أمنية، وتحسينات في الأداء لضمان تشغيل موقعك بسلاسة.">
                                        We provide ongoing technical support, security updates, and performance optimizations to ensure your website runs smoothly.
                                    </span>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4 col-md-6" data-aos="fade-up" data-aos-delay="200">
                    <div class="service-card">
                        <div class="service-icon">
                            <i class="fas fa-code"></i>
                        </div>
                        <h3 class="service-title">
                            <span data-en="Website Development" data-ar="تطوير المواقع">Website Development</span>
                        </h3>
                        <p class="service-description">
                            <span data-en="Responsive and interactive websites built using the latest technologies."
                                  data-ar="مواقع تفاعلية ومتجاوبة مبنية بأحدث التقنيات.">
                                Responsive and interactive websites built using the latest technologies.
                            </span>
                        </p>
                        <div class="service-overlay">
                            <div class="service-overlay-content">
                                <h4>
                                    <span data-en="Website Development" data-ar="تطوير المواقع">Website Development</span>
                                </h4>
                                <p>
                                    <span data-en="Custom websites built with modern frameworks, ensuring responsive design and optimal user experience across all devices."
                                          data-ar="مواقع مخصصة مبنية بأطر عمل حديثة لضمان تصميم متجاوب وتجربة مستخدم مثالية على جميع الأجهزة.">
                                        Custom websites built with modern frameworks, ensuring responsive design and optimal user experience across all devices.
                                    </span>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4 col-md-6" data-aos="fade-up" data-aos-delay="300">
                    <div class="service-card">
                        <div class="service-icon">
                            <i class="fas fa-layer-group"></i>
                        </div>
                        <h3 class="service-title">
                            <span data-en="Design Platforms" data-ar="منصات التصميم">Design Platforms</span>
                        </h3>
                        <p class="service-description">
                            <span data-en="Smart e-learning platforms that are user-friendly and device-compatible."
                                  data-ar="منصات تعليمية ذكية وسهلة الاستخدام ومتوافقة مع جميع الأجهزة.">
                                Smart e-learning platforms that are user-friendly and device-compatible.
                            </span>
                        </p>
                        <div class="service-overlay">
                            <div class="service-overlay-content">
                                <h4>
                                    <span data-en="Design Platforms" data-ar="منصات التصميم">Design Platforms</span>
                                </h4>
                                <p>
                                    <span data-en="Intuitive e-learning platforms designed to enhance educational experiences with modern UI/UX principles."
                                          data-ar="منصات تعليمية بديهية تعزز تجربة التعلم باستخدام مبادئ تصميم حديثة للواجهات وتجربة المستخدم.">
                                        Intuitive e-learning platforms designed to enhance educational experiences with modern UI/UX principles.
                                    </span>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section id="works" class="py-5 my-5 text-center">
        <div class="container">
            <h2 class="fw-bold mb-1 section-title" data-ar="اعمالنا" data-en="Our Work">Our Work</h2>
            <p class="text-muted mb-4" data-ar="استكشف بعض مشاريعنا المميزة." data-en="Explore some of our featured projects.">Explore some of our featured projects.</p>
            <div class="row g-4">

                @foreach (var work in Model)
                {
                    <div class="col-md-6 col-lg-6" data-aos="fade-up">
                        <a href="@work.Link" target="_blank" class="card h-100 work-card text-decoration-none">
                            <div class="card-img-container">
                                <img src="@work.ImageUrl" class="img-fluid w-100 h-100" alt="@work.Name" onerror="this.onerror=null;this.src='https://placehold.co/600x400/EFEFEF/AAAAAA?text=Image+Not+Found';">
                            </div>
                            <div class="p-4">
                                <h3 class="fw-bold" data-en="@work.Name" data-ar="@work.NameAr">@work.Name</h3>
                            </div>
                        </a>
                    </div>
                }

            </div>
        </div>
    </section>

    <section class="contact my-5 bg-white" id="contact">
        <div class="container">
            <div class="text-center">
                <h2 class="h2-style fw-semibold mb-2 section-title">
                    <span data-en="Contact" data-ar="تواصل معنا">Contact</span>
                </h2>

                <p class="mb-5">
                    <span data-en="We’d love to hear from you! feel free to reach out"
                          data-ar="يسعدنا التواصل معك! لا تتردد في التواصل معنا">
                        We’d love to hear from you! feel free to reach out
                    </span>
                </p>
            </div>
            <div class="row g-4 box d-flex gy-5 pb-3 my-4 container mx-auto">
                <!-- Address -->
                <div class="col-lg-4">
                    <div class="inner d-flex gap-3">
                        <div class="icon d-flex justify-content-center align-items-center flex-shrink-0">
                            <i class="fa-solid fa-location-dot"></i>
                        </div>
                        <div class="content">
                            <h3 class="fs-5 fw-semibold">
                                <span data-en="Address" data-ar="العنوان">Address</span>
                            </h3>
                            <p>
                                <span data-en="3 Al Ansar main street, Giza, Egypt" data-ar="3 شارع الأنصار الرئيسي، الجيزة، مصر">
                                    3 Al Ansar main street, Giza, Egypt
                                </span>
                            </p>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="inner d-flex gap-3">
                        <div class="icon d-flex justify-content-center align-items-center">
                            <i class="fa-solid fa-phone-volume"></i>
                        </div>
                        <div class="content">
                            <h3 class="fs-5 fw-semibold">
                                <span data-en="Call Us" data-ar="اتصل بنا">Call Us</span>
                            </h3>
                            <p>
                                <span data-en="01149364431" data-ar="01149364431">01149364431</span>
                            </p>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="inner d-flex gap-3">
                        <div class="icon d-flex justify-content-center align-items-center">
                            <i class="fa-solid fa-envelope"></i>
                        </div>
                        <div class="content">
                            <h3 class="fs-5 fw-semibold">
                                <span data-en="Email Us" data-ar="راسلنا">Email Us</span>
                            </h3>
                            <p>
                                <span data-en="info@gmtweb.online" data-ar="info@gmtweb.online">info@gmtweb.online</span>
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-12" data-aos="fade" data-aos-duration="800">
                <div class="contact-form-container">
                    <form id="contactForm" class="contact-form">
                        <div class="row g-4">

                            <div class="col-md-6">
                                <div class="form-group">
                                    <input type="text" id="userName" name="userName" class="form-control"
                                           placeholder="Your Name"
                                           data-placeholder-en="Your Name"
                                           data-placeholder-ar="اسمك">
                                    <div class="error-message" id="nameError"></div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <input type="email" id="userEmail" name="userEmail" class="form-control"
                                           placeholder="Your Email"
                                           data-placeholder-en="Your Email"
                                           data-placeholder-ar="بريدك الإلكتروني">
                                    <div class="error-message" id="emailError"></div>
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="form-group">
                                    <input type="text" id="subject" name="subject" class="form-control"
                                           placeholder="Subject"
                                           data-placeholder-en="Subject"
                                           data-placeholder-ar="الموضوع">
                                    <div class="error-message" id="subjectError"></div>
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="form-group">
                                    <textarea id="message" name="message" class="form-control" rows="6"
                                              placeholder="Message"
                                              data-placeholder-en="Message"
                                              data-placeholder-ar="رسالتك"></textarea>
                                    <div class="error-message" id="messageError"></div>
                                </div>
                            </div>

                            <div class="col-12">
                                <button type="submit" class="btn btn-primary btn-lg submit-btn">
                                    <span class="btn-text"
                                          data-en="Send Message"
                                          data-ar="إرسال الرسالة">Send Message</span>
                                    <span class="btn-loading d-none">
                                        <i class="fas fa-spinner fa-spin me-2"></i>
                                        <span data-en="Sending..." data-ar="جاري الإرسال...">Sending...</span>
                                    </span>
                                </button>
                            </div>
                        </div>
                    </form>

                    <div id="formSuccess" class="success-message d-none">
                        <i class="fas fa-check-circle me-2"></i>
                        <span data-en="Message sent successfully! We'll get back to you soon."
                              data-ar="تم إرسال الرسالة بنجاح! سنقوم بالرد عليك قريبًا.">
                            Message sent successfully! We'll get back to you soon.
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>
